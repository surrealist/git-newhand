  ViewBag.Title = "Index";
}
<div class="row">
  <div class="col-12">
    <div class="page-header">
      <h1>Checkpoints <small>How far you can go?</small></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">

    <div class="alert alert-danger">
      <div class="thai thai-8pt">(หน้าจอนี้ยังใช้งานจริงไม่ได้นะครับ  วาดเอาไอเดีย)</div>
    </div>

    <div class="panel panel-success" style="margin-top: 10px; margin-bottom: 5px;">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="#" class="btn-success btn btn-mini">
            <span class="glyphicon glyphicon-check"></span>
            Checked
          </a>
        </div>
        <small>
          <span class="glyphicon glyphicon-flag"></span>
          CHECKPOINT #1
        </small>
        <br />
        <strong class="thai thai-12pt">ใช้คำสั่ง git ทั่วไปในเครื่องตัวเองได้
        </strong>
      </div>
      <p class="thai thai-10pt">
        ติดตั้ง git และใช้คำสั่งเหล่านี้ได้
        <code>git init</code>
        <code>git add</code>
        <code>git commit</code>
        <code>git status</code>
      </p>
      <p>
        <span class="label label-default">6 articles to read</span>
        <span class="label label-default">3 actions to do</span>
      </p>
      <div class="panel-footer" style="padding: 7px 10px">
        <img class="img-rounded" style="width: 30px;" src="http://graph.facebook.com/4/picture?type=square" />
        <img class="img-rounded" style="width: 30px;" src="http://graph.facebook.com/suthep/picture?type=square" />
        <img class="img-rounded" style="width: 30px;" src="http://graph.facebook.com/505020394/picture?type=square" />
        <img class="img-rounded" style="width: 30px;" src="http://graph.facebook.com/405020399/picture?type=square" />
      </div>
    </div>
  </div>
</div>


